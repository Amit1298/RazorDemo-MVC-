
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@*Inline Expression Statment*@
<p>Today Date and Time is: @DateTime.Now</p>
<p>This Year is: @DateTime.Now.Year</p>


@*Declaring variable using var keyword and multistatement block*@
@{
    string name = "AmitKrishna";
    var TodayTime = DateTime.Now.ToLongTimeString();
    <h2>My name is @name</h2>
    <h2>Today time is @TodayTime</h2>
}

@*conditional Statement*@
@{
    int marks = 70;
    if (marks >= 80)
    {
        <h2>Your Grade is A-1</h2>
    }
    else
    {
        <h2>Your Grade is A</h2>
    }
}

@{
    string fruits = "App";
    switch (fruits)
    {
        case "Apple":
            <h3>You have selected Apple</h3>
            break;
        case "Orange":
            <h3>You have selected Orange</h3>
            break;
        case "Banana":
            <h3>You have selected Banana</h3>
            break;
        default:
            <h3>@fruits invalid Fruits</h3>
            break;
    }
}

@*loops*@
@{ 
    for (int i = 0; i < 10; i++)
    {
        <h2>@i</h2>
    }
}

@{ 
    string[] sports = { "Football", "Criket", "Running", "Hide And See" };
    foreach (string i in sports)
    {
        <h2>@i</h2>
    }
}